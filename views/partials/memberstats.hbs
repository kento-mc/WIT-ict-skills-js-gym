<section class="ui segment">
    <h1 class="ui four column grid">
        <div class="center aligned column">
            <i class="big user icon"></i>
        </div>
        <div class="center aligned column">
            {{#if isIdealWeight}}
                <i class="big green plus square icon"></i>
            {{else}}
                <i class="big red plus square icon"></i>
            {{/if}}
        </div>
        <div class="center aligned column">
            <i class="big heartbeat icon"></i>{{BMI}}
        </div>
        <div class="center aligned column">
            <i class="big user md icon"></i>
        </div>
    </h1>
    <div class="ui four column grid">
        <div class="center aligned column">
            <header class="ui header">
                {{firstName}} {{lastName}}
            </header>
        </div>
        <div class="center aligned column">
            <header class="ui header">
                IDEAL WEIGHT INDICATOR
            </header>
        </div>
        <div class="center aligned column">
            <header class="ui header">
                BMI
            </header>
        </div>
        <div class="center aligned column">
            <header class="ui header">
                {{BMICategory}}
            </header>
        </div>
    </div>
</section>